{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "files": [
      "app/main.ts",
      "app/app.module.ts"
    ],
    "include": [
      "app/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "build"
    ]
  }
}